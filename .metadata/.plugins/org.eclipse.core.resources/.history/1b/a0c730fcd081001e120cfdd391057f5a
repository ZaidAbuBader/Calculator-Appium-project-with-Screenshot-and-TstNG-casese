	@Test()
	public void DleteDate() throws SQLException {
		stm = con.createStatement();
		String DeleteQuery1 = " Delete from customers where customerNumber=2026  ";
		int DeleteRow = stm.executeUpdate(DeleteQuery1);
		if (DeleteRow > 0) {
			System.out.println("The data is deleted correctlt");
